easyblock = 'MakeCp'

name = 'PASA'
version = '2.0.2'

homepage = 'https://pasapipeline.github.io/'
description = """Program for analysing NGS data."""

toolchain = {'name': 'foss', 'version': '2016a'}

source_urls = ['https://github.com/PASApipeline/PASApipeline/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['a3b350e453efeba126049363435b205b20322d64b85d5ef0cbd7c040ff575df3']

dependencies = [
    ('GMAP-GSNAP', '2016-05-01'),
    ('BLAT', '3.5'),
    ('FASTA', '36.3.8e'),
]

files_to_copy = [
    'bin',
    'scripts',
    'docs',
    'PerlLib',
    'PyLib',
    'sample_data',
    'SAMPLE_HOOKS',
    'pasa_conf',
    'Pasa_init.pm',
    'pasa-plugins',
]

sanity_check_paths = {
    'files': ['bin/%s' % x for x in
              ['cdbfasta', 'cdbyank', 'pasa', 'slclust']],
    'dirs': ['scripts']
}

moduleclass = 'bio'
