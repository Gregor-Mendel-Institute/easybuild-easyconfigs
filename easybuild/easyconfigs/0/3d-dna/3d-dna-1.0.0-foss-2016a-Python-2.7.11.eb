easyblock = 'Tarball'

name = '3d-dna'
version = '1.0.0'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/theaidenlab/3d-dna'
description = """3D de novo assembly (3D DNA) pipeline"""

toolchain = {'name': 'foss', 'version': '2016a'}

source_urls = ['https://github.com/theaidenlab/%(name)s/archive']
sources = ['master.zip']

dependencies = [
    ('Python', '2.7.11'),
    ('LASTZ', '1.02.00'),
    ('Java', '1.8.0_144', '', True),
    ('parallel', '20160322'),
]

modextrapaths = {'PATH': '.'}

postinstallcmds = ['chmod 755 %(installdir)s/run-pipeline.sh']

sanity_check_paths = {
    'files': ['run-pipeline.sh'],
    'dirs': [],
}

moduleclass = 'bio'
