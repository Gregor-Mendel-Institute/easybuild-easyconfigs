easyblock = 'MakeCp'

name = 'SCIP'
version = '3.2.1'

homepage = 'http://scip.zib.de/'
description = """SCIP is currently one of the fastest non-commercial solvers for mixed integer programming (MIP) and 
mixed integer nonlinear programming (MINLP). It is also a framework for constraint integer programming and 
branch-cut-and-price. It allows for total control of the solution process and the access of detailed information down 
to the guts of the solver."""

toolchain = {'name': 'foss', 'version': '2016a'}

# http://scip.zib.de/download/release/scipoptsuite-3.2.1.tgz
source_urls = ['http://scip.zib.de/download/release/']
sources = ['scipoptsuite-%(version)s.tgz']

checksums = [('md5', 'c8e4d39a447ef651e3d49a3955c24450')]

dependencies = [
    ('zlib', '1.2.8'),
    ('libreadline', '6.3'),
    ('GMP', '6.1.0'),
]


files_to_copy = [
    (["scip-%s/bin/*" % version], "bin"),
    (["soplex-2.2.1/bin/*"], "bin"),
    (["zimpl-3.3.3/bin/*"], "bin"),
    (["scip-%s/lib/*" % version], "lib"),
    (["soplex-2.2.1/lib/*"], "lib"),
    (["zimpl-3.3.3/lib/*"], "lib"),
    (["scip-%s/doc" % version], "doc"),
]

sanity_check_paths = {
    'files': ["bin/scip", "bin/soplex", "bin/zimpl"],
    'dirs': ["doc", "lib"],
}

moduleclass = 'math'
