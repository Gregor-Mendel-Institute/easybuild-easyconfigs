# This file is an EasyBuild reciPY as per https://github.com/easybuilders/easybuild

easyblock = 'CMakeMake'

name = 'Salmon'
version = '0.9.1'

homepage = 'https://github.com/COMBINE-lab/%(namelower)s'
description = """Salmon is a wicked-fast program to produce a highly-accurate,
 transcript-level quantification estimates from RNA-seq data."""

toolchain = {'name': 'foss', 'version': '2017a'}
toolchainopts = {'pic': True, 'openmp': True}

source_urls = ['https://github.com/COMBINE-lab/%(namelower)s/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['3a32c28d217f8f0af411c77c04144b1fa4e6fd3c2f676661cc875123e4f53520']

builddependencies = [('CMake', '3.8.1', '-GCCcore-6.3.0', True)]

dependencies = [
    ('Boost', '1.65.1'),
    ('tbb', '2017_U6', '-GCCcore-6.3.0', True),
    ('Jellyfish', '2.2.6'),
]

sanity_check_paths = {
    'files': ['bin/%(namelower)s'],
    'dirs': []
}

moduleclass = 'bio'
